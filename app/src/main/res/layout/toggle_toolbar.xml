<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_15sdp"
    android:paddingHorizontal="@dimen/_15sdp">
    <ImageView
        android:id="@+id/icBack"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_back"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/tvSubmitQuizText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/butAsTakeQuiz"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_34sdp"
                android:text="Take Quiz"
                android:fontFamily="@font/regular"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/_70sdp"
                android:paddingStart="@dimen/_38sdp"
                android:textSize="@dimen/_9sdp"
                android:background="@drawable/toggle_off"/>

            <TextView
                android:id="@+id/butAsSubmitQuiz"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="Submit Quiz"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:fontFamily="@font/regular"
                android:paddingStart="@dimen/_18sdp"
                android:textSize="@dimen/_9sdp"
                android:background="@drawable/toggle_on"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tvTakeQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/butAsSubmitQuizTwo"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="Submit Quiz"
                android:fontFamily="@font/regular"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:paddingStart="@dimen/_18sdp"
                android:textSize="@dimen/_9sdp"
                android:background="@drawable/toggle_off"/>

            <TextView
                android:id="@+id/butAsTakeQuizTwo"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="Take Quiz"
                android:fontFamily="@font/regular"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/_85sdp"
                android:paddingStart="@dimen/_38sdp"
                android:textSize="@dimen/_9sdp"
                android:background="@drawable/toggle_on"/>



        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>