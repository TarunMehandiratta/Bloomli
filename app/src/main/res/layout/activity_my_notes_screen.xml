<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyNotesScreen">

    <RelativeLayout
        android:id="@+id/top_lay_my_notes_screen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:id="@+id/my_notes_back_icon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/my_notes_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/medium"
            android:text="My Notes"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/my_notes_reach_icon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/search_icon" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/top_lay_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_lay_my_notes_screen"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/creativity_lay"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/lay_one_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/medium"
                            android:text="Creativity"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:id="@+id/lay_one_view"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:background="@color/black" />



                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relationship_lay"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/lay_two_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/medium"
                            android:text="Relationship"
                            android:textColor="@color/silver"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:id="@+id/lay_two_view"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:background="@color/black" />



                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/science_lay"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/lay_three_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/medium"
                            android:text="Science"
                            android:textColor="@color/silver"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:id="@+id/lay_three_view"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:background="@color/black" />



                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/parenting_lay"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/lay_four_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/medium"
                            android:text="parenting"
                            android:textColor="@color/silver"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:id="@+id/lay_four_view"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:background="@color/black" />



                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_notes_screen_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_lay_two"
        android:overScrollMode="never" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_notes_screen_recycler2"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_lay_two" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_notes_screen_recycler3"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/top_lay_two" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_notes_screen_recycler4"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_lay_two" />




</RelativeLayout>