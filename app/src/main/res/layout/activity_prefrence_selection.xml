<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_marginTop="@dimen/_50sdp"
                    android:id="@+id/backIcon_sign_what"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:fontFamily="@font/medium"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="What Will You Most Use?"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/backIcon_sign_what" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/catRv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50sdp"
                    app:layout_constraintBottom_toTopOf="@+id/login_btnn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/readBookLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_12sdp"
                        android:background="@drawable/rec_solid_bg"
                        app:layout_constraintTop_toTopOf="parent">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <CheckBox
                                android:id="@+id/icon"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_below="@+id/txt_sign"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:background="@drawable/pink_checked_selector"
                                android:button="@null" />

                            <TextView
                                android:id="@+id/txt_sign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:fontFamily="@font/regular"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:singleLine="true"
                                android:text="Read Book"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/circular_solid_bg_white"
                            android:padding="@dimen/_15sdp"
                            android:src="@drawable/ic_read_book"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/listenBookLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_12sdp"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/rec_solid_bg"
                        app:layout_constraintTop_toBottomOf="@+id/readBookLay">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <CheckBox
                                android:id="@+id/iconn"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_below="@+id/text_sign2"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/pink_checked_selector"
                                android:button="@null"
                                android:buttonTint="@color/app_pink"
                                android:checked="true" />

                            <TextView
                                android:id="@+id/text_sign2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:fontFamily="@font/regular"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:singleLine="true"
                                android:text="Listen To Book"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/circular_solid_bg_white"
                            android:padding="@dimen/_15sdp"
                            android:src="@drawable/ic_audio_book"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:background="@drawable/rec_solid_bg"
                        app:layout_constraintTop_toBottomOf="@+id/listenBookLay">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <CheckBox
                                android:id="@+id/iconnn"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_below="@+id/text_sign3"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/pink_checked_selector"
                                android:button="@null"
                                android:checked="true" />

                            <TextView
                                android:id="@+id/text_sign3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:fontFamily="@font/regular"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:singleLine="true"
                                android:text="To Be Quizzed"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/circular_solid_bg_white"
                            android:padding="@dimen/_15sdp"
                            android:src="@drawable/ic_quizz_book"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/login_btn_sign_up"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/butCustom"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/circular_corner_btn_bg"
                    android:backgroundTint="@color/dark_purple_mix_brown"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_15sdp"
                    android:text="Continue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bold"
                    android:padding="@dimen/_12sdp"

                    android:text="@string/forgot_your_password"
                    android:textAlignment="center"
                    android:textColor="@color/app_pink"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_btnn" />

                <TextView
                    android:id="@+id/orTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_17sdp"
                    android:fontFamily="@font/medium"
                    android:text="Or"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/forgot" />

                <TextView
                    android:id="@+id/socialTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_17sdp"
                    android:fontFamily="@font/medium"
                    android:text="Login with social accounts"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/orTxt" />


                <ImageView
                    android:id="@+id/google_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/ic_google"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/socialTxt" />

                <ImageView
                    android:id="@+id/fb_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/ic_fb"
                    android:visibility="gone"
                    app:layout_constraintRight_toLeftOf="@+id/google_icon"
                    app:layout_constraintTop_toBottomOf="@+id/socialTxt" />

                <ImageView
                    android:id="@+id/twitter_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/ic_twitter"
                    android:visibility="gone"
                    app:layout_constraintLeft_toRightOf="@+id/google_icon"
                    app:layout_constraintTop_toBottomOf="@+id/socialTxt" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>