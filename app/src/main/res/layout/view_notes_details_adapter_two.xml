<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/light_silver_round_gradient"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/bloom_text_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/medium"
            android:text="Bloom: 1"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bloom_text_view_details2"
            android:layout_toEndOf="@+id/bloom_text_view_details"
            android:text="Best Quote"
            android:textSize="@dimen/_8sdp"
            android:fontFamily="@font/medium"
            android:textColor="@color/app_pink"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/cancle_icon"
            android:src="@drawable/cancle_pink_outline_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/cancle_icon"
            android:src="@drawable/edit_black_round_icon" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/edit_text_card_view"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_below="@+id/bloom_text_view_details"
            android:layout_marginTop="@dimen/_22sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:gravity="top"
                android:paddingStart="@dimen/_15sdp"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_22sdp"
            android:id="@+id/save_text_lay"
            android:background="@drawable/pink_round_gradient"
            android:layout_below="@+id/edit_text_card_view"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/medium"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_below="@+id/edit_text_card_view"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/save_text_lay"
            android:background="@drawable/back_ground_gradient_pink_outline"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:text="Save"
                android:textColor="@color/app_pink"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>