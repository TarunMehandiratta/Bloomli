<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.BookOfTheDayListenScreen">

    <RelativeLayout
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_150sdp"
        android:id="@+id/close_lay2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_400sdp"
        android:visibility="visible"
        android:elevation="@dimen/_10sdp"
        android:background="@drawable/pink_new_round_gra"/>



    <RelativeLayout
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_150sdp"
        android:id="@+id/open_lay"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:elevation="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_400sdp"
        android:background="@drawable/pink_new_round_gra">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/read_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/font_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/download_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/black_outline_heart_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/share_icon"/>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_360sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:id="@+id/listen_screen_top_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transp_pink"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/listen_screen_back_icon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/round_back_icon" />

            <ImageView
                android:id="@+id/listen_screen_hint"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/hint_icon" />

            <ImageView
                android:id="@+id/listen_screen_book"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_below="@+id/listen_screen_back_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/book_purple" />

            <TextView
                android:id="@+id/listen_screen_book_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listen_screen_book"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="How to spend quality time with loved ones" />


            <ImageView
                android:id="@+id/audio_pause_icon"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/listen_screen_book_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/pause_dark_with_pink_icon" />

            <ImageView
                android:id="@+id/audio_play_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/listen_screen_book_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/paly_dark_icon"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/reverse_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listen_screen_book_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_toStartOf="@+id/audio_play_icon"
                android:background="@drawable/reverse_dark_icon" />

            <ImageView
                android:id="@+id/forward_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listen_screen_book_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toEndOf="@+id/audio_play_icon"
                android:background="@drawable/forward_dark_icon" />

            <TextView
                android:id="@+id/speed_x_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listen_screen_book_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_toStartOf="@+id/reverse_icon"
                android:fontFamily="@font/regular"
                android:text="2.0x"
                android:textColor="@color/dark_purple_mix_brown"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/half_moon_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listen_screen_book_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toEndOf="@+id/forward_icon"
                android:background="@drawable/half_moon_dark" />

            <ProgressBar
                android:id="@+id/listen_progress_line"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_6sdp"
                android:layout_below="@+id/audio_play_icon"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:progress="60"
                android:progressDrawable="@drawable/custom_progress_bar_line" />

            <TextView
                android:id="@+id/time_left_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@+id/listen_progress_line"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/regular"
                android:text="0.00"
                android:textColor="@color/dark_purple_mix_brown"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/time_right_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:fontFamily="@font/regular"
                android:layout_below="@+id/listen_progress_line"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:text="0.00"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/dark_purple_mix_brown" />

            <TextView
                android:id="@+id/listen_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_right_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/regular"
                android:text="Chapter"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/listen_chapter_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listen_chapter"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/medium"
                android:text="Happy Moments On Sea"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listen_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_360sdp"
        android:overScrollMode="never" />


</RelativeLayout>