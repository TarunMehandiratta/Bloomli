<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_90sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_100sdp"

        android:elevation="@dimen/_10sdp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img"
            android:scaleType="centerCrop"
            android:src="@drawable/book" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/rate_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.9"
            android:textSize="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/back_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/light_green_round_gradient">



    </RelativeLayout>

    <TextView
        android:id="@+id/text_name"
        style="@style/mediumText"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/back_lay"
        android:fontFamily="@font/medium"
        android:text="Twice Shy"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp" />

    <TextView
        style="@style/regText"
        android:layout_below="@+id/text_name"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/app_pink"
        android:id="@+id/text_name2"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/regular"
        android:text="By John ven"
        android:textSize="@dimen/_6sdp" />

    <TextView
        style="@style/regText"
        android:layout_below="@+id/text_name2"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/regular"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Spend  lounging on the beach, madly in love  with friendz.."
        android:maxLines="2"
        android:textSize="@dimen/_6sdp" />


</RelativeLayout>