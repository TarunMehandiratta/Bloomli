<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".activities.BookOfTheDayDescriptionScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/book_day_top_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:background="@drawable/trans_pink">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/book_day_back_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_43sdp"
                    android:src="@drawable/round_back_icon" />

                <ImageView
                    android:id="@+id/book_day_quiz_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_43sdp"
                    android:layout_toStartOf="@+id/book_day_save_icon"
                    android:src="@drawable/round_quiz_icon" />

                <ImageView
                    android:id="@+id/book_day_save_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_43sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/round_save_icon" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/book_day_img"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_160sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_15sdp"
                android:src="@drawable/book_purple" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/book_day_top_lay">

            <TextView
                android:id="@+id/book_day_tittle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/medium"
                android:text="Love At First"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/book_day_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_day_tittle_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/regular"
                android:text="By Kate Clayborn"
                android:textColor="@color/app_pink"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/book_day_desc_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_day_desc_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/regular"
                android:text="How to spend quality time with our loved ones"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <RelativeLayout
                android:id="@+id/rate_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/book_day_desc_text2"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/star_one"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/ic_selected_rate_view" />

                <ImageView
                    android:id="@+id/star_two"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/star_one"
                    android:src="@drawable/ic_selected_rate_view" />

                <ImageView
                    android:id="@+id/star_three"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toEndOf="@id/star_two"
                    android:src="@drawable/ic_selected_rate_view" />

                <ImageView
                    android:id="@+id/star_four"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toEndOf="@id/star_three"
                    android:src="@drawable/ic_selected_rate_view" />

                <ImageView
                    android:id="@+id/star_five"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toEndOf="@id/star_four"
                    android:src="@drawable/ic_selected_rate_view"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@id/star_five"
                    android:text="4.9"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/read_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rate_lay"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/read_lauyout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/read_listner_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/read_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/read_custom_icon" />

                        <TextView
                            android:id="@+id/read_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_60sdp"
                            android:fontFamily="@font/medium"
                            android:text="Read"
                            android:textColor="@color/dark_purple_mix_brown"
                            android:textSize="@dimen/_10sdp" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/listen_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_90sdp">

                    <RelativeLayout
                        android:id="@+id/read_listner_lay2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/listner_back_custom_icon" />

                        <TextView
                            android:id="@+id/read_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_60sdp"
                            android:fontFamily="@font/medium"
                            android:text="Listen"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/digits_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@+id/read_lay"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="@color/light_silver"
                app:cardCornerRadius="@dimen/_15sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:id="@+id/digit_text_digit_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp">

                        <TextView
                            android:id="@+id/digit_text_digit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/medium"
                            android:text="231"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/digit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/digit_text_digit"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/regular"
                            android:text="Pages"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/digit_text_digit_lay"
                        android:background="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/digit_text_digit_lay_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:layout_toEndOf="@+id/view">

                        <TextView
                            android:id="@+id/digit_text_digit_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium"
                            android:text="45 min"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/digit_text_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/digit_text_digit_2"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/regular"
                            android:text="Audio"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/digit_text_digit_lay_2"
                        android:background="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/digit_text_digit_lay_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:layout_toEndOf="@+id/view2">

                        <TextView
                            android:id="@+id/digit_text_digit_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/medium"
                            android:text="14"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/digit_text_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/digit_text_digit_3"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/regular"
                            android:text="Key ideas"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/benefits_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/digits_lay"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/benifits_lay_clickable"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/benefits_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/medium"
                            android:text="Benefits"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:id="@+id/viewbenifit"
                            android:layout_width="@dimen/_5sdp"
                            android:layout_height="@dimen/_5sdp"
                            android:layout_below="@+id/benefits_text"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/back_ground_gradient_black"
                            android:visibility="visible" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/idea_lay"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/idea_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/medium"
                            android:text="Key Ideas"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:layout_width="@dimen/_5sdp"
                            android:layout_height="@dimen/_5sdp"
                            android:id="@+id/viewbenifit2"
                            android:layout_below="@+id/idea_text"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/back_ground_gradient_black"
                            android:visibility="visible" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/about_lay"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/about_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/medium"
                            android:gravity="center"
                            android:text="About The Author"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:layout_width="@dimen/_5sdp"
                            android:layout_height="@dimen/_5sdp"
                            android:id="@+id/viewbenifit3"
                            android:layout_below="@+id/about_text"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/back_ground_gradient_black"
                            android:visibility="visible" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/recycler_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/benefits_lay"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/light_gray_round_back_gradient">

                <View
                    android:id="@+id/benifit_view"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_33sdp"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/white_round_gra" />

                <View
                    android:id="@+id/idea_view"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_130sdp"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/white_round_gra"
                    android:visibility="gone" />

                <View
                    android:id="@+id/about_view"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="@dimen/_43sdp"
                    android:background="@drawable/white_round_gra"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tittle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/medium"
                    android:padding="@dimen/_10sdp"
                    android:text="Who would benefit from this book?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/benefits_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tittle_text"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:overScrollMode="never" />


            </RelativeLayout>

            <TextView
                android:id="@+id/book_day_similar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_lay"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/semibold"
                android:text="Similar Books"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/profile_frag_next_icon"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@+id/recycler_lay"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/similar_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_day_similar_text"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/book_day_reco_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/similar_recycler"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/semibold"
                android:text="Recommended Books"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/profile_frag_next_icon2"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@+id/similar_recycler"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommended_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_day_reco_text"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp" />


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>